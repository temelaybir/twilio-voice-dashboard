# ==========================================
# Twilio Configuration
# ==========================================

# Main Twilio Account (for voice operations)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_FLOW_SID=FWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Daily Summary Twilio Account (for call reports)
TWILIO_DAILY_SUMMARY_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_DAILY_SUMMARY_AUTH_TOKEN=your_daily_summary_auth_token
TWILIO_DAILY_SUMMARY_PHONE_NUMBER=+1234567890

# ==========================================
# Server Configuration
# ==========================================

# Server Port
PORT=3001

# Production Webhook Base URL (Vercel deployment)
# In production: https://your-backend.vercel.app
# In development: leave empty or use Ngrok URL
WEBHOOK_BASE_URL=

# Ngrok URL (ONLY for local development webhooks)
# Get URL from: ngrok http 3001
# Not needed in production!
NGROK_URL=

# Backend API URL (for email reports and frontend)
# Development: http://localhost:3001
# Production: https://your-backend.vercel.app
BACKEND_API_URL=http://localhost:3001

# Frontend URL (for CORS in production)
# Development: http://localhost:3000
# Production: https://your-frontend.vercel.app
FRONTEND_URL=

# ==========================================
# Email Configuration (for daily reports)
# ==========================================

# SMTP Server Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Email Credentials
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Sender and Recipient
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Clinic Information
CLINIC_NAME=Your Clinic Name

# ==========================================
# Frontend Configuration (voice-dashboard)
# ==========================================
# Create voice-dashboard/.env.local file with:
# NEXT_PUBLIC_API_URL=http://localhost:3001

# ==========================================
# Security Notes
# ==========================================
# 1. NEVER commit .env file to git
# 2. Use strong, unique passwords for all services
# 3. Use Twilio App Password for Gmail (not regular password)
# 4. Rotate credentials regularly
# 5. Use environment variables in production (Vercel, Heroku, etc.)
# 6. Keep NGROK_URL updated when developing locally

